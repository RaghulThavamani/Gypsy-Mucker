<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    app:cardCornerRadius="20dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginRight="40dp"
            android:text="@string/common_google_play_services_enable_button"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:id="@+id/date"
            android:gravity="end"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textColor="@color/textColorDayBlack"/>




        <View
            android:background="@color/LightGray"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"/>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/textColorDayBlack"
                android:background="@drawable/mechanic_name"
                />
            <TextView
                android:id="@+id/mechanicNameOfCompletedWork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="serif-monospace"
                android:paddingLeft="10dp"
                android:text="User name"
                android:gravity="start"
                android:textStyle="bold"
                android:textColor="@color/textColorDayBlack"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/textColorDayBlack"
                android:background="@drawable/mechanic_name"
                />
            <TextView
                android:id="@+id/customerNameOfCompletedWork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="serif-monospace"
                android:paddingLeft="10dp"
                android:text="User name"
                android:gravity="start"
                android:textStyle="bold"
                android:textColor="@color/textColorDayBlack"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/textColorDayBlack"
                android:background="@drawable/mechanic_vehicle"
                />
            <TextView
                android:id="@+id/vehicleInfoOfCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="serif-monospace"
                android:paddingLeft="10dp"
                android:text="User name"
                android:gravity="start"
                android:textStyle="bold"
                android:textColor="@color/textColorDayBlack"
                android:textSize="12sp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>




    </LinearLayout>
</androidx.cardview.widget.CardView>