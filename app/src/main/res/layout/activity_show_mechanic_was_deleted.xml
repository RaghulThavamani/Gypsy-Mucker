<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".ShowMechanicWasDeleted">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/textColorDayBlack"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="serif-monospace"
        android:text="We Sorry to inform you, Your owner deleted your service from GYPSY MUCKER."/>


    <Button
        android:id="@+id/exit"
        android:layout_marginTop="50dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textColor="@color/textColorDayWhite"
        android:textAllCaps="true"
        android:text="Ok"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:background="@drawable/button_background"/>

</LinearLayout>