<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="20dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Mechanic Profile"
                android:textAllCaps="true"
                android:textColor="@color/exColorAccent"
                android:textSize="20dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="5dp"
                    android:layout_marginTop="50dp"
                    android:layout_height="200dp">
                    <LinearLayout

                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageUrl1"
                            android:layout_marginTop="10dp"
                            android:layout_width="150dp"
                            android:layout_gravity="center"
                            android:layout_height="150dp" />

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <ImageView

                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/textColorDayBlack"
                                android:background="@drawable/mechanic_email" />

                            <TextView
                                android:id="@+id/emailMechanic1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:text="User name"
                                android:textColor="@color/textColorDayBlack"
                                android:textSize="15dp" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/textColorDayBlack"
                        android:background="@drawable/mechanic_name"/>
                    <TextView
                        android:id="@+id/mechanicName1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="serif-monospace"
                        android:paddingLeft="10dp"
                        android:text="User name"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorDayBlack"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/textColorDayBlack"
                        android:background="@drawable/shop_image"/>
                    <TextView
                        android:id="@+id/shopName1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="serif-monospace"
                        android:paddingLeft="10dp"
                        android:text="User name"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorDayBlack"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/textColorDayBlack"
                        android:background="@drawable/mechanic_vehicle" />
                    <TextView
                        android:id="@+id/vehicleInfoMec1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="serif-monospace"
                        android:paddingLeft="10dp"
                        android:text="User name"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorDayBlack"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mobileNOLayout"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:orientation="horizontal">


                    <ImageView

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/textColorDayBlack"
                        android:background="@drawable/mechanic_mobile" />
                    <TextView
                        android:id="@+id/mechanicMobile1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="serif-monospace"
                        android:paddingLeft="10dp"
                        android:text="User name"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/textColorDayBlack"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/aadharNoLayout"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:orientation="horizontal">
                    <ImageView

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/textColorDayBlack"
                        android:background="@drawable/idcard" />
                    <TextView
                        android:id="@+id/aadharNoMechanic1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="serif-monospace"
                        android:paddingLeft="10dp"
                        android:text="User name"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorDayBlack"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/unionIdLayout"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:backgroundTint="@color/textColorDayBlack"
                        android:background="@drawable/idcard"
                        android:layout_gravity="center"
                        />


                    <TextView
                        android:id="@+id/unionId1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="serif-monospace"
                        android:paddingLeft="10dp"
                        android:gravity=""
                        android:text="User name"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorDayBlack"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/unionNameLayout"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:orientation="horizontal">
                    <ImageView

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/textColorDayBlack"
                        android:background="@drawable/mechanic_union" />


                    <TextView
                        android:id="@+id/unionName1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="serif-monospace"
                        android:paddingLeft="10dp"
                        android:text="User name"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorDayBlack"
                        android:textSize="18sp" />
                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_gravity="center"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <Button
                            android:visibility="gone"
                            android:layout_marginTop="20dp"
                            android:id="@+id/moreInfoBtn"
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:text="More Info"
                            android:textColor="@color/textColorDayWhite"
                            android:textSize="15dp"
                            android:background="@drawable/button_background"
                            android:fontFamily="serif-monospace"
                            android:textStyle="bold" />

                        <Button
                            android:layout_marginTop="20dp"
                            android:visibility="visible"
                            android:id="@+id/request"
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:textColor="@color/textColorDayWhite"
                            android:text="Send Service Request"
                            android:background="@drawable/button_background"
                            android:fontFamily="serif-monospace"
                            android:textStyle="bold" />

                        <Button
                            android:onClick="customerReviewDialog"
                            android:visibility="visible"
                            android:layout_marginTop="10dp"
                            android:id="@+id/reviewBtn"
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:text="Customer Reviews"
                            android:textSize="15dp"
                            android:textColor="@color/textColorDayWhite"
                            android:background="@drawable/button_background"
                            android:fontFamily="serif-monospace"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/message"
                        android:textColor="@color/textColorDayBlack"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Click the Above Button to get Service.\n It enables the Contact Details."
                        android:fontFamily="serif-monospace"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>
            </LinearLayout>
        </LinearLayout>
</androidx.cardview.widget.CardView>