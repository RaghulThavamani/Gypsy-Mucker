<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   android:layout_gravity="center"
    android:gravity="center"
    tools:context=".GmForgotPasswordPage">

    <pl.droidsonroids.gif.GifImageView
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/resetpassword" />

    <TextView
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="We mail you a link after you enter a email and click the send button.\n Please click on the link to reset a password."
        android:clickable="true"
        android:layout_gravity="center"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/textColorDayBlack"
        tools:ignore="OnClick" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:focusable="true"
        android:layout_gravity="center"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/textColorDayBlack">

        <EditText
            android:id="@+id/forgotEmail"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="center"
            android:fontFamily="serif-monospace"
            android:hint=" Enter Your Email"
            android:inputType="textEmailAddress"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/forgotBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Send Mail"
        android:clickable="true"
        android:layout_gravity="center"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:textColor="@color/textColorDayWhite"
        android:background="@drawable/button_background"
        />

</LinearLayout>