<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroundColorAccent"
    android:layout_gravity="center"
    android:layout_width="400dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="325dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agree Dialog box"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:textColor="@color/textColorDayWhite"
            android:fontFamily="serif-monospace"
            android:layout_marginTop="20dp"/>


        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/okApprove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Are you Sure You Want to Approve This Request.?"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/textColorDayBlack"
                    android:fontFamily="serif-monospace"
                    android:layout_marginTop="20dp"/>


                <TextView
                    android:id="@+id/verifyLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:text="https://checkgmailavailability.com/"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/textColorDayBlack"
                    android:fontFamily="serif-monospace"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="30dp">
            <LinearLayout

                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/cancelBtn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/decline"
                    android:text="Cancel"/>

                <ImageButton
                    android:id="@+id/okBtn"
                    android:layout_marginLeft="60dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/approve"
                    android:text="Ok"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>