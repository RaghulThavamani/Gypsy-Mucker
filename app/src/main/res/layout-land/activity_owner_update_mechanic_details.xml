<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:scrollbars="none"
    android:orientation="vertical"
    tools:context=".OwnerUpdateMechanicDetails">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update mechanic profile"
        android:textSize="22sp"
        android:textAllCaps="true"
        android:textColor="@color/textColorDayBlack"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:textColor="@color/textColorDayBlack"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:textColor="@color/exColorAccent"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:textColor="@color/textColorDayBlack"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:textColor="@color/exColorAccent"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"/>
    </LinearLayout>
  </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:enabled="false"
            android:inputType="number"
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/textColorDayBlack"
            android:fontFamily="serif-monospace"
            android:hint="Mobile" />


        <Switch
            android:id="@+id/mobVisibleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp" />


    </com.google.android.material.textfield.TextInputLayout>




    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:enabled="false"
            android:inputType="number"
            android:id="@+id/unionId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/textColorDayBlack"
            android:fontFamily="serif-monospace"
            android:hint="Union Id" />

        <Switch
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:id="@+id/unionIdVisibleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>





    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:enabled="false"
            android:inputType="text"
            android:id="@+id/unionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/textColorDayBlack"
            android:fontFamily="serif-monospace"
            android:hint="Union Name" />

        <Switch
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:id="@+id/unionNameVisibleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>



    <ImageView
        android:id="@+id/imageUrl"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="200dp"/>

    <ImageView
        android:visibility="invisible"
        android:id="@+id/uploadImage"
        android:src="@drawable/upload_photo"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

        <Switch
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:id="@+id/uploadImageVisibleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/updateRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorDayWhite"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:text="Update Request"
        android:fontFamily="serif-monospace"
        android:background="@drawable/button_background"
        android:layout_marginTop="20dp"/>




    </LinearLayout>

</ScrollView>