<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp"
    android:layout_margin="20dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:fontFamily="serif"
            android:textSize="20dp"
            android:textColor="@color/exColorAccent"
            android:textStyle="bold"
            android:text="Service Request From" />








        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/textColorDayBlack"
                        android:background="@drawable/mechanic_name"
                        />
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="serif-monospace"
                        android:paddingLeft="10dp"
                        android:text="User name"
                        android:gravity="end"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/textColorDayBlack"
                        android:textSize="18sp" />
                </LinearLayout>
                <View
                    android:layout_gravity="center"
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:background="@color/LightGray"
                    android:layout_margin="5dp"/>
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/textColorDayBlack"
                        android:background="@drawable/mechanic_mobile"
                        />
                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="serif-monospace"
                        android:paddingLeft="10dp"
                        android:gravity="end"
                        android:text="User name"
                        android:textStyle="bold"
                        android:textColor="@color/textColorDayBlack"
                        android:textSize="18sp" />
                </LinearLayout>
                <View
                    android:layout_gravity="center"
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:background="@color/LightGray"
                    android:layout_margin="5dp"/>
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/textColorDayBlack"
                        android:background="@drawable/mechanic_email"
                        />
                    <TextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="serif-monospace"
                        android:paddingLeft="10dp"
                        android:gravity="end"
                        android:text="User name"
                        android:textStyle="bold"
                        android:textColor="@color/textColorDayBlack"
                        android:textSize="14sp" />
                </LinearLayout>
                <View
                    android:layout_gravity="center"
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:background="@color/LightGray"
                    android:layout_margin="5dp"/>
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/textColorDayBlack"
                        android:background="@drawable/mechanic_vehicle"
                        />
                    <TextView
                        android:id="@+id/vehicle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="serif-monospace"
                        android:paddingLeft="10dp"
                        android:text="User name"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textColor="@color/textColorDayBlack"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_marginLeft="50dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/textColorDayBlack"
                        android:background="@drawable/idcard"
                        />
                    <TextView
                        android:id="@+id/licNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="serif-monospace"
                        android:paddingLeft="10dp"
                        android:gravity="end"
                        android:text="User name"
                        android:textStyle="bold"
                        android:textColor="@color/textColorDayBlack"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:layout_gravity="center"
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:background="@color/LightGray"
                    android:layout_margin="5dp"/>

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/textColorDayBlack"
                        android:background="@drawable/latitude"
                        />
                    <TextView
                        android:id="@+id/lat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="serif-monospace"
                        android:paddingLeft="10dp"
                        android:gravity="end"
                        android:text="User name"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorDayBlack"
                        android:textSize="18sp" />
                </LinearLayout>
                <View
                    android:layout_gravity="center"
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:background="@color/LightGray"
                    android:layout_margin="5dp"/>
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/textColorDayBlack"
                        android:background="@drawable/longitude"
                        />
                    <TextView
                        android:id="@+id/lng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="serif-monospace"
                        android:paddingLeft="10dp"
                        android:gravity="end"
                        android:text="User name"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorDayBlack"
                        android:textSize="18sp" />
                </LinearLayout>
                <View
                    android:layout_gravity="center"
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:background="@color/LightGray"
                    android:layout_margin="5dp"/>
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/status"
                        android:backgroundTint="@color/textColorDayBlack"
                        />
                    <TextView
                        android:id="@+id/status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="serif-monospace"
                        android:paddingLeft="10dp"
                        android:gravity="end"
                        android:text="User name"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorDayBlack"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <Button
            android:onClick="getLocation"
            android:id="@+id/getCusLocation"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Get Customer Location"
            android:textSize="15sp"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/button_background"
            android:textColor="@color/textColorDayWhite"
            android:clickable="true"/>

        <LinearLayout
            android:id="@+id/btnLayout"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/acceptBtn"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:text="ACCEPT"
                android:clickable="true"
                android:textStyle="bold"
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="serif-monospace"
                android:background="@drawable/button_background"
                android:backgroundTint="@color/LightGreen" />

            <Button
                android:onClick="mechanicRejectCustomerDialog"
                android:layout_marginLeft="10dp"
                android:id="@+id/rejectBtn"
                android:layout_width="150dp"
                android:clickable="true"
                android:textStyle="bold"
                android:layout_height="45dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_gravity="center"
                android:fontFamily="serif-monospace"
                android:backgroundTint="@color/LightRed"
                android:text="REJECT"
                android:background="@drawable/button_background"/>

        </LinearLayout>

        <Button
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:id="@+id/serviceComplete"
            android:layout_width="300dp"
            android:clickable="true"
            android:textStyle="bold"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:fontFamily="serif-monospace"
            android:backgroundTint="@color/LightGreen"
            android:text="Service Completed"
            android:background="@drawable/button_background"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>